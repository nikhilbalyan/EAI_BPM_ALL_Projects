package ar.com_glassfish_sample_jms_test;

import static org.junit.Assert.assertEquals;

import java.io.ByteArrayOutputStream;
import java.io.PrintStream;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;

import ar.com_glassfish_sample_jms.async.AsyncReceiver;
import ar.com_glassfish_sample_jms.async.Sender;

public class JMSTest {

	private final ByteArrayOutputStream outContent = new ByteArrayOutputStream();
	private final ByteArrayOutputStream errContent = new ByteArrayOutputStream();

	@Before
	public void setUpStreams() {
		System.setOut(new PrintStream(outContent));
		System.setErr(new PrintStream(errContent));
	}

	@Test
	public void out() {
//		System.out.print("hello");
//		assertEquals("hello", outContent.toString();
		Sender sender = new Sender();
		AsyncReceiver rec = new AsyncReceiver();
		try {
			sender.main(null);
			rec.main(null);
			
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		assertEquals("sent: Hello\n", outContent.toString());
	}

	@After
	public void cleanUpStreams() {
		System.setOut(null);
		System.setErr(null);
	}

}
